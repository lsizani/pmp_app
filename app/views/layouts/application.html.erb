<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <title>PMP APP</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootstrap/latest/css/bootstrap-theme.min.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'modules/app-blue' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
  <div class="main">
    <div class="main-wrapper">
      <div class="app" id="app">
        <% if user_signed_in? %>
            <%= react_component 'AppNavBar', { user: current_user } %>
            <%= react_component 'SideBarNav', { isSignedIn: current_user.present? } %>
        <% end %>
        <%= yield %>
      </div>
    </div>
  </div>
  <div class="ref" id="ref">
    <div class="color-primary"></div>
    <div class="chart">
      <div class="color-primary"></div>
      <div class="color-secondary"></div>
    </div>
  </div>
  </body>
  <%= javascript_include_tag 'libs/vendor' %>
  <%= javascript_include_tag 'libs/app' %>
</html>
